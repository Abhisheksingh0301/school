<%- include('header'); -%>
<title><%= title %></title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<link rel='stylesheet' href='/stylesheets/style.css'>
<link href="/css/bootstrap.min.css" rel="stylesheet">
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>

<h1 id="myHeader"><%= title %></h1>
<div style="width: 75%; float:left; height:100px; margin-left:200px">
    <form action="/updtfeemaster/"  method="POST">
        <div class="container-fluid">
            <input type="hidden" name="id" value="<%= records._id %>">
            <table border="2" class="table table-hover">
                <tr>
                    <th colspan="2">Edit Fee records</th>
                </tr>
                <tr>
                    <td><label for="txtfeetype" class="col-md-3 control-label">Fee Type</label></td>
                    <td style="width:50%"><input type="text" class="form-control" name="txtfeetype" value="<%= records.fee_type %>" placeholder="Fee Type" required></td>
                </tr>
                <tr>
                    <td><label for="txtamount" class="col-md-3 control-label">Amount</label></td>
                    <td style="width:50%"><input type="text"  class="form-control" name="txtamount" value="<%= records.amount %>" placeholder="Amount" required></td>
                </tr>
                <tr>
                    <td colspan="2">
                        <button type="submit" class="btn btn-success"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>&nbsp;Update</button>
                    </td>
                </tr>
            </table>
        </div>
    </form>
    <%- include('footer'); -%>
 </div>