<%- include('header'); -%>
<title><%= title %></title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<link rel='stylesheet' href='/stylesheets/style.css'>
<link href="/css/bootstrap.min.css" rel="stylesheet">
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>

<h1 id="myHeader"><%= title %></h1>
<div style="width: 60%; float:left;  margin:20px">
    <table border="1" class="table table-hover">
        <thead>
            <tr>
                <th>Sl</th>
                <th>Class</th>
                <th>Tution Fees</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="myTable">
            <tr>
                <% for (var i=0; i<class_masters.length; i++){ %>
                <td><%= class_masters[i].sl %></td>
                <td><%= class_masters[i].class %></td>
                <td><%= class_masters[i].tution_fee %></td>
                <td>
                    <a href='/updateclassmaster/<%= class_masters[i]._id %>'><i class="fa fa-edit"></i></a> | 
                    <a href='/classmstdelete/<%= class_masters[i]._id %>'><i class="fa fa-trash"></i></a>
                </td>
            </tr>            
            <% } %>
        </tbody>
    </table>
</div>

<div style="width: 25%; float:left; margin:20px">
    <form method="POST">
        <div class="container-fluid">
            <table border="1">
                <tr>
                    <th colspan="2">Add new records</th>
                </tr>
                <tr><td><label for="txts1">Sl</label></td>
                    <td><input type="number" name="txtsl" id="txtsl" required class="form-control"></td>
                </tr>
                <tr>
                    <td><label for="txtclass">Class</label></td>
                    <td><input type="text" name="txtclass" id="txtclass" required class="form-control"></td>
                </tr>
                <tr>
                    <td><label for="txtfee">Tution Fee</label></td>
                    <td><input type="number" step="50" name="txtfee" id="txtfee" required class="form-control"></td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" class="btn btn-success" value="Add"></td>
                </tr>
            </table>
        </div>
    </form>
</div>

<div style="clear: both;"></div>
<%- include('footer'); -%>
