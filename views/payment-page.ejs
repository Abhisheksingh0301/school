<%- include('header'); -%>
<title><%= title %></title>   
<link rel='stylesheet' href='/stylesheets/style.css'>
<link href="/css/bootstrap.min.css" rel="stylesheet">
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>

<h1 id="myHeader"> <%= headertext %></h1>
<h2 id="myHeader"> <%= updtmsg %></h2>
<p>Payment received for <%= student_masters.name %></p>
<% if(payment_trans.length>0){ %>
    <table border="1" class="table table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Class</th>
                <th>Sec</th>
                <th>Roll</th>
                <th>Amount</th>
                <th>Payment-mode</th>
                <th>Payment-date</th>
            </tr>
        </thead>
        <tbody id="myTable">
            <tr>
                <% for (var i=0; i<payment_trans.length; i++){ %>
                    <td><% if(payment_trans[i].skool.name==student_masters.name) { %> 
                            <%= payment_trans[i].skool.name %> "##" <% } else { %>
                            <%= payment_trans[i].skool.name %>
                            <% } %>
                    </td>
                    <td><%= payment_trans[i].skool.class %></td>
                    <td><%= payment_trans[i].skool.section %></td>
                    <td><%= payment_trans[i].skool.roll %></td>
                    <td><%= payment_trans[i].amt_recd %></td>
                    <td><%= payment_trans[i].payment_mode %></td>
                    <td><%= moment(payment_trans[i].payment_date).format( 'DD-MMM-YYYY') %></td>
            </tr>            
            <% } %>
        </tbody>
    </table>
<% } else { %>
    No records found
<% } %>

<%- include('footer'); -%>