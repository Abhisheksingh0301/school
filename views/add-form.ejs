<form method="POST">
    <div class="container-fluid">
        <h1 id="myHeader"><%= headertext %></h1>
        <hr>
    <table>
        <tr>
            <td><label for="txtname">Name:</label></td>
            <td colspan="3">
                <input id="txtname" type="text" placeholder="Enter name" name="name" class="form-control" required>
            </td>
        </tr>        
        <tr>
            <td><label for="txtfname">Father's Name:</label></td>
            <td colspan="3">
                <input id="txtfname" type="text" placeholder="Enter Father's name" name="fname" class="form-control" required>
            </td>
        </tr>
        <tr>
            <td><label for="txtmname">Mother's Name:</label></td>
            <td colspan="3">
                <input id="txtmname" type="text" placeholder="Enter Mother's name" name="mname" class="form-control" required>
            </td>
        </tr>
        <tr>
            <td><label for="txtmob">Mobile:</label></td>
            <td>
                <input id="txtmob" type="text" placeholder="Enter mobile number" name="mob" class="form-control" required>
            </td>
            <td><label for="txtroll">Roll:</label></td>
            <td>
                <input id="txtroll" type="text" placeholder="Enter roll" name="roll" class="form-control" required>
            </td>
        </tr>
        <tr>
            <td><label for="txtclass">Class:</label></td>            
            <td>
                <select id="cl" name="class_mst" class="form-control">
                    <option value="0"> Please select</option>
                    <% for (var i=0; i<class_masters.length; i++){ %>
                        <option value= '<%= class_masters[i].class %>'> <%= class_masters[i].class %></option>
                    <% } %>
                </select>
            </td>
        <!-- </tr>
        <tr> -->
            <td><label for="txtsec">Section:</label></td>
            <td>
                <input id="txtsec" type="text" placeholder="Enter section" name="section" class="form-control" required>
            </td>
        </tr>
        <tr>
            <td><label for="datepicker">DOB:</label></td>
            <td>
                <!-- <input id="txtage" type="number" placeholder="Enter age" name="age" class="form-control" required> -->
                <input id="datepicker" name="dob" type="date" class="form-control" required>
            </td>
            <td><label for="tt1">Transport:</label></td>
            <td>
                <input id="tt1" type="radio" name="transport" value="true"> Yes &nbsp;&nbsp;
                <input id="tt2" type="radio" name="transport" value="false" checked> No
            </td>
                        
        </tr>
        <tr>
            <td><label for="txtadd1">Address:</label></td>
            <td colspan="2">
                <input id="txtadd1" type="text" placeholder="Address Line1" name="line1" class="form-control" required>
            </td>
        <!-- </tr>
        <tr> -->
            <!-- <td><label for="txtadd2">Address2:</label></td> -->
            <td>
                <input id="txtadd2" type="text" placeholder="Address Line2" name="line2" class="form-control">
            </td>
        </tr>
        <tr>
            <td><label for="txtadd3">District:</label></td>
            <td>
                <input id="txtadd3" type="text" placeholder="District" name="district" class="form-control" required>
            </td>
        <!-- </tr>
        <tr> -->
            <td><label for="txtadd4">Pincode</label></td>
            <td>
                <input id="txtadd4" type="text" placeholder="Pincode" name="pin" class="form-control" required>
            </td>
        </tr>
        <tr>
            <td>Sex:</td>
            <td>
                <input type="radio" name="usex" value="Male"> Male &nbsp;&nbsp;
                <input type="radio" name="usex" value="Female"> Female
            </td>
            <td><label for="txtcons">Concession:</label></td>
            <td>
                <input id="txtcons" type="number" step="0.5" placeholder="Enter concession (%)" 
                value="0.0" name="concession" class="form-control" required>
            </td>
        </tr>
        
        <tr>
            <td>
                <input type="submit" class="btn btn-success" value="Add">
                <!-- <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-plus"></span> Add
                </button> -->
            </td>
            <td colspan="3">
                <input type="button" class="btn btn-primary" value="Display" 
                onclick="window.location='display'">
            </td>
        </tr>
        <tr>
            <td colspan="3"><h3><%= updtmsg %></h3></td>
        </tr>
    </table>
</div>
</form>
