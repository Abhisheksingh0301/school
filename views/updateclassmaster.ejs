<%- include('header'); -%>
<title><%= title %></title>
<link rel='stylesheet' href='/stylesheets/style.css'>
<link href="/css/bootstrap.min.css" rel="stylesheet">
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.min.js"></script>

<h1 id="myHeader"><%= title %></h1>
<div style="width: 75%; float:left; height:100px; margin-left:200px">
    <form action="/updtclassmaster/"  method="POST">
        <div class="container-fluid">
            <input type="hidden" name="id" value="<%= records._id %>">
            <table border="2" class="table table-hover">
                <tr>
                    <th colspan="2">Edit Class records</th>
                </tr>
                <tr>
                    <td><label for="txtsl" class="col-md-3 control-label">Sl</label></td>
                    <td style="width:60%"><input type="text" class="form-control" name="txtsl" value="<%= records.sl %>" placeholder="Sl no" readonly></td>
                </tr>
                <tr>
                    <td><label for="txtclass" class="col-md-3 control-label">Class</label></td>
                    <td style="width:60%"><input type="text"  class="form-control" name="txtclass" value="<%= records.class %>" placeholder="Class" required></td>
                </tr>
                <tr>
                    <td><label for="txtfee" class="col-md-3 control-label">Tution Fee</label></td>
                    <td style="width:60%"><input type="text"  class="form-control" name="txtfee" value="<%= records.tution_fee %>" placeholder="Tution fee" required></td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" name="submit" value="Submit" class="btn btn-primary"></td>
                </tr>
            </table>
        </div>
    </form>
    <%- include('footer'); -%>
 </div>

 